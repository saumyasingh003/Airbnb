<% layout("./layouts/boilerplate") %>

<body>
  <div class="row mt-4 mb-3">
    <h1 class="col-6 offset-3">SignUp with Airbnb</h1>
    <div class="col-6 offset-3">
      <form accept="/signup" method="POST" class="needs-validation" novalidate>
        <div class="mb-4">
          <label for="username" class="form-lable">Username</label>
          <input
            id="username"
            name="username"
            type="text"
            class="form-control"
            required
          />
          <div class="valid-feedback">Looks Good!</div>
        </div>

        <div class="mb-4">
          <label for="email" class="form-lable">Email</label>
          <input
            id="email"
            name="email"
            type="text"
            class="form-control"
            required
          />
          <div class="invalid-feedback">Enter Email</div>
        </div>
        <div class="mb-4">
          <label for="password" class="form-lable">Password</label>
          <input
            id="password"
            name="password"
            type="password"
            class="form-control"
            required
          />
          <div class="invalid-feedback">Enter Password</div>
        </div>
        <button
          class="btn btn-success col-2 offset-4"
          style="padding: 9px 10px; width: 180px"
        >
          SignUp
        </button>
      </form>
    </div>
  </div>
</body>

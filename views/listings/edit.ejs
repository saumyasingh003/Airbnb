<% layout("./layouts/boilerplate") %>
<body>
    <div class="row"  style="margin-top: 2rem;" >
        <div class="col-8 offset-2">
    <h1  style="text-align: center;"><b>Edit Form</b></h1>
    <form method="POST" action="/listings/<%= listing._id %>?_method=PUT" class="needs-validation" novalidate  enctype="multipart/form-data">
       
      <div class="mb-3">
        <label for="title" class="form-lable">Title:</label>
        <input
          id="title"
          name="title"
          value="<%= listing.title %>"
          type="text"
          class="form-control"
          required
        />
        <div class="invalid-feedback">Enter new Title</div>
      </div>
      
      <div class="mb-3">
        <label for="description" class="form-lable">Description:</label>
        <textarea
          id="description"
          name="description"
          type="text"
          class="form-control" required>
        <%=listing.description%> </textarea>
        <div class="invalid-feedback">Enter new Description</div>
      </div>

      <div class="mb-3">
        Image Preview<br/><br/>
        <img src="<%= originalImageUrl %>" style="width: 200px; height: 150px; border-radius: 10px;">
      </div>
      

      <div class="mb-3">
        <label for="image" class="form-lable">Upload New Image:</label>
        <input
          id="listing[image]"
          name="listing[image]"
          type="file"
          value="<%= listing.image.url %>"
         
          class="form-control"
        />
      </div>




      <div class="row">
      <div class="mb-3 col-md-4">
        <label for="price" class="form-lable">Price:</label>
        <input
          id="price"
          name="price"
          value="<%= listing.price %>"
          type="number"
          class="form-control"
          required
        />
        <div class="invalid-feedback">Enter new Price</div>
      </div>

      <div class="mb-3 col-md-8">
        <label for="country" class="form-lable">Country:</label>
        <input
          id="country"
          name="country"
          value="<%= listing.country %>"
          type="text"
          class="form-control"
          required
        />
        <div class="invalid-feedback">Enter new Country</div>
      </div>
      </div>
     

      <div class="mb-3">
        <label for="location" class="form-lable">Location:</label>
        <input
          id="location"
          name="location"
          value="<%= listing.location %>"
          type="text"
          class="form-control"
          required
        />
        <div class="invalid-feedback">Enter new  Location</div>
      </div>

      

      <button class="btn btn-dark edit-btn" style="background-color: #ee212f; border:none;">Add</button>
      </div>
      </div>
      <br>
      <br>
    </form>
  
  </body>

